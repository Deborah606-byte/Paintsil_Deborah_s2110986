<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/platinum"
    tools:context=".SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/updateInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specify the time to update weather data"
                android:layout_marginTop="16dp"/>
            

            <TextView
                android:id="@+id/updateTime1Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Time 1:"
                android:layout_marginTop="16dp"/>

            <TimePicker
                android:id="@+id/updateTime1Picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/updateTime2Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Time 2:"
                android:layout_marginTop="16dp"/>

            <TimePicker
                android:id="@+id/updateTime2Picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Save"
                android:background="@drawable/home_button"
                android:layout_marginTop="16dp"
                android:paddingStart="24dp"
                android:paddingTop="12dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="32dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

