<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/teal">

    <TextView
        android:id="@+id/textView_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: "
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/locationImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/day_clear"
        android:layout_marginTop="8dp"/>

    <!-- Weather Observation Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:paddingTop="8dp">

        <!-- Wind Observation -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/windyImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/windy" /> <!-- Replace with your wind icon -->

            <TextView
                android:id="@+id/windyValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="@string/wind_value"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/windyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="@string/wind_direction"
                android:textColor="@color/white"/>

        </LinearLayout>

        <!-- Humidity Observation -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/humideImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/humidity" /> <!-- Replace with your humidity icon -->

            <TextView
                android:id="@+id/humideValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="2dp"
                android:text="@string/humidity_value"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/humideTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="2dp"
                android:text="@string/humidity"
                android:textColor="@color/white"/>

        </LinearLayout>

        <!-- Pollution Observation -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/polluteImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ecology" /> <!-- Replace with your humidity icon -->

            <TextView
                android:id="@+id/polluteValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="@string/pollution_value"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/polluteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:text="@string/pollution"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
